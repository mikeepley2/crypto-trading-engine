# Signal Generation Engine Dockerfile
# ML and LLM-powered trading signal generation with XGBoost models and market analysis

FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Set environment variables
ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1
ENV TZ=UTC

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    curl \
    pkg-config \
    default-libmysqlclient-dev \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better caching
COPY requirements.enhanced.txt /app/

# Install Python dependencies
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.enhanced.txt

# Create necessary directories
RUN mkdir -p /app/engines /app/shared /app/logs /app/ml_models_optimized

# Copy application code
COPY engines/ /app/engines/
COPY shared/ /app/shared/

# Create health check endpoint script
RUN echo '#!/bin/bash\ncurl -f http://localhost:8029/health || exit 1' > /app/healthcheck.sh && \
    chmod +x /app/healthcheck.sh

# Set proper permissions
RUN chmod -R 755 /app

# Expose port for the signal generation engine
EXPOSE 8029

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD /app/healthcheck.sh

# Default command
CMD ["python", "/app/engines/signal_generation_engine.py", "--container"]

# Labels for container metadata
LABEL name="signal-generation-engine"
LABEL version="1.0.0"
LABEL description="Signal Generation Engine - ML and LLM-powered trading signal generation"
LABEL maintainer="CryptoAI Trading Team"
